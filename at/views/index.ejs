<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>validades</title>
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">


</head>
<body class="" style="background:#C1B4AE; color:#F6E8EA">
    <div class="container pb-3" style="background: #353238">
        <h1 class="text-center 12 pt-2 pb-1 text-uppercase" style="color: #F6E8EA; height: auto;">Lista de Produtos
            <i class="bi bi-box-arrow-in-down" onclick="window.location='/cadastro'"></i>
        </h1>
<div>
    <table class="table table-hover" style=" background:#353238;color:#F6E8EA">
        <tr>
            <th style="color:#F6E8EA" onclick="window.location='/?ordem=0'">
                PRODUTOS
            </th>
            <th style="color:#F6E8EA" onclick="window.location='/?ordem=1'">
                VALIDADE
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
<% for(var m = 0; m < resultados.length; m++){%>

        <tr>
            <td class="">
                <%=resultados[m].produto%>
            </td>
            <td class="">
                <%=(resultados[m].validade).toDateString()%>
            </td>

            <td>
                <span class="btn btn-success" style="background:#629677; color:#F6E8EA" onclick="window.location='/consumido?id=<%=resultados[m]._id%>'">Consumido </span>
            </td>
            <td>
                <span class="btn btn-warning" style="background:#FF9F1C; color:#F6E8EA" onclick="window.location='/descartado?id=<%=resultados[m]._id%>'">Descartado </span>
            </td>
            <td>
                <span class="btn btn-danger" style="background:#F45B69; color:#F6E8EA"onclick="window.location='/excluir?id=<%=resultados[m]._id%>'">Excluir </span>
            </td>

        </tr>
        <%}%>

    </table>
</div>


    </div>
</body>
</html>